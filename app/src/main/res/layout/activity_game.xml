<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/background">

<!--    <SurfaceView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_above="@+id/shopDpc"-->
<!--        android:layout_below="@+id/dpsAndDpcView"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_centerInParent="true"-->
<!--        />-->

    <TextView
        android:id="@+id/dotsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="0 Dots"
        android:textColor="#fff"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/dpsAndDpcView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dotsView"
        android:gravity="center"
        android:maxLines="1"
        android:text="0 Dps | 1 Dpc"
        android:textColor="#fff"
        android:textSize="15sp"
        />


    <ImageView
        android:id="@+id/dotBtn"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/dpsAndDpcView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/demon"
        android:onClick="dotBtn"
        android:src="@drawable/demon" />

    <Button
        android:id="@+id/shopDpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_red"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="shopDpc"
        android:text="Dpc +2 | 15D"
        android:textColor="@color/primaryTextColor"
        android:textSize="15sp" />

    <Button
        android:id="@+id/shopDps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_red"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="shopDps"
        android:text="Dps +1 | 250D"
        android:textColor="@color/primaryTextColor"
        android:textSize="15sp" />

</RelativeLayout>